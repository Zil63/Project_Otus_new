global:
  scrape_interval: 15s
  evaluation_interval: 15s

# external_url moved to root level (not in global)
#external_url: 'http://{{ ansible_host }}:9091'
route:
  group_by: ['alertname', 'cluster', 'service']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 3h
  receiver: 'telegram-notifications'

receivers:
  - name: 'telegram-notifications'
    telegram_configs:
      - bot_token: '{{ telegram_bot_token }}'
        chat_id: {{ telegram_chat_id }}
        parse_mode: 'HTML'
        send_resolved: true
        message: |
          {{ if eq .Status "firing" }}ðŸ”¥ <b>[ALERT]</b>{{ else }}âœ… <b>[RESOLVED]</b>{{ end }}
          <b>Alert:</b> {{ .CommonLabels.alertname }}
          <b>Instance:</b> {{ .CommonLabels.instance }}
          <b>Severity:</b> {{ .CommonLabels.severity }}
          <b>Summary:</b> {{ .CommonAnnotations.summary }}
          <b>Description:</b> {{ .CommonAnnotations.description }}
          <b>Time:</b> {{ .StartsAt.Format "2006-01-02 15:04:05 UTC" }}

inhibit_rules:
  - source_match:
      severity: 'critical'
    target_match:
      severity: 'warning'
    equal: ['alertname', 'cluster', 'service']
